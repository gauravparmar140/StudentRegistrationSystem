<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Student Registration System</title>
    @Styles.Render("~/Content/css")

    @Styles.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jquery")

<style type="text/css">
    .center {
        text-align:center;
        align-content:center;
        width:30%;
    }
</style> 

</head>
<body style="background-image:url(../../Image/background-city.png);background-repeat:no-repeat;
    background-size:contain;height:800px
">
    @foreach (var menu in ViewBag.Menus)
    {

        <div class="row" style="align-content:center; width:10%;display:inline-block;font-size:large;margin-left:100px;text-decoration:none">
            @Html.ActionLink((string)menu.MenuName, (string)menu.MenuAction, (string)menu.MenuController)
        </div>

    }
    
    <div class="container body-content">
             @RenderBody()
        <hr />
    </div>

</body>
</html>
